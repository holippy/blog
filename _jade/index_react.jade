              p.mdSlideCat Music
              p.mdSlideTtl
                span タイトルタイトルタイトルタイトルタイトルタイトル
              p.mdSlideImg
                img(src='#{imgPath}')

      - var i = 5
      ul.mdSlideListPager
        while i--
          li
            a.icon-icon01(href="#")

      ul.mdSlideListBtn
        li.mdSlideListBtnBack
          a.icon-icon02(href="#")
        li.mdSlideListBtnNext
          a.icon-icon04(href="#")

